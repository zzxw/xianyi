<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tencent.wxcloudrun.dao.UserMapper">

    <resultMap id="UserMapper" type="com.tencent.wxcloudrun.model.User">
        <id property="userId" column="userId"/>
        <result property="phoneNumber" column="phoneNumber"/>
        <result property="nickName" column="nickName"/>
<!--        <result property="updatedAt" column="updatedAt" javaType="java.time.LocalDateTime"  />-->
    </resultMap>

    <select id="getUser" resultMap="UserMapper" parameterType="java.lang.String">
        SELECT `userId`, `phoneNumber`, `nickName`,`pwd`
        FROM UserInfo
        WHERE userId = #{userId}
    </select>

    <delete id="clearUser" parameterType="java.lang.String">
        DELETE
        FROM UserInfo
        where userId = #{userId}
        limit 1
    </delete>

    <update id="upsertCount" parameterType="com.tencent.wxcloudrun.model.User">
        INSERT INTO `Counters`(`id`, `count`)
        VALUE(#{id}, #{count}) 
        ON DUPLICATE KEY UPDATE count=#{count}
    </update>

    <insert id="createUser" parameterType="com.tencent.wxcloudrun.model.User">
        INSERT INTO `UserInfo`(`userId`, `phoneNumber`,`nickName`)
            VALUE(#{userId}, #{phoneNumber},#{nickName})
    </insert>

</mapper>
